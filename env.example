# ==============================================================================
# Supply Chain BDA - Environment Configuration
# ==============================================================================
# Copy this file to .env and adjust values as needed
#
# Usage:
#   cp env.example .env
#   docker compose up
#
# ==============================================================================

# ------------------------------------------------------------------------------
# ARCHIVAL MODE CONFIGURATION
# ------------------------------------------------------------------------------
# Controls when MongoDB data is archived to HDFS
#
# Production Mode (default):
#   - DEMO_MODE=false
#   - ARCHIVE_THRESHOLD_MB=300
#   - Meets assignment compliance (300MB threshold)
#   - Takes ~7 hours to trigger first archive
#
# Demo Mode (for presentations/recording):
#   - DEMO_MODE=true
#   - DEMO_THRESHOLD_MB=30
#   - Triggers archival in ~45 minutes
#   - Shows archival working during live demos
#
DEMO_MODE=false
DEMO_THRESHOLD_MB=30
ARCHIVE_THRESHOLD_MB=300

# ------------------------------------------------------------------------------
# MONGODB CONFIGURATION
# ------------------------------------------------------------------------------
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=admin123

# ------------------------------------------------------------------------------
# DATA GENERATION RATE
# ------------------------------------------------------------------------------
# Events generated per minute (adjust based on your RAM/CPU)
# Default: 1500 events/min → ~29MB/hour → 300MB in ~10 hours
# For faster testing: increase to 3000-5000 (monitor RAM usage)
EVENTS_PER_MINUTE=1500
GENERATION_INTERVAL_SECONDS=60

